{
	"include": ["src"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"strict": true,
		"module": "CommonJS",
		"target": "ES2020",
		"declaration": false,
		"alwaysStrict": true,
		"jsx": "react",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"paths": {
			"@underlay/pipeline/*": ["./node_modules/@underlay/pipeline/lib/blocks/*"]
		}
	}
}
